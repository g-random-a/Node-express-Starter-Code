{
  "openapi": "3.0.0",
  "info": {
    "title": "Response Collection API",
    "version": "1.0.0",
    "description": "API for managing Question responses",
    "contact": {
      "name": "Yared Wubie",
      "email": "ywubie@qena.dev"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000/api",
      "description": "Development server"
    }
  ],
  "paths": {
    "/responses": {
      "post": {
        "summary": "Create a new response",
        "description": "Create a response to a question",
        "tags": ["Responses"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateResponse"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Response created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          }
        }
      }
    },
    "/responses/{taskId}/{questionId}": {
      "put": {
        "summary": "Edit an existing answer",
        "description": "Edit a response for a question based on taskId and questionId",
        "tags": ["Responses"],
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "questionId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EditResponse"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Answer updated successfully"
          },
          "404": {
            "description": "Response not found"
          },
          "400": {
            "description": "Unsupported question type"
          }
        }
      },
      "get": {
        "summary": "Fetch a response by taskId and questionId",
        "description": "Retrieve a response based on the taskId and questionId",
        "tags": ["Responses"],
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "questionId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Response found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "404": {
            "description": "Response not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a response by taskId and questionId",
        "description": "Delete a specific response by taskId and questionId",
        "tags": ["Responses"],
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "questionId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Response deleted successfully"
          },
          "404": {
            "description": "Response not found"
          }
        }
      }
    },
    "/responses/bulk": {
      "post": {
        "summary": "Create bulk responses",
        "description": "Create multiple responses for questions in bulk",
        "tags": ["Responses"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBulkResponses"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Bulk responses created successfully"
          },
          "400": {
            "description": "Invalid input data"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateResponse": {
        "type": "object",
        "properties": {
          "taskId": {
            "type": "string"
          },
          "questionId": {
            "type": "string"
          },
          "questionTitle": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
        
            "answers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "required": true
                  },
                  "value": {
                    "type": "string",
                    "required": true
                  },
                  "selected": {
                    "type": "boolean",
                    "required": true
                  },
                  "title": {
                    "type": "string",
                    "required": true
                  },
                  "startValue": {
                    "type": "integer",
                    "required": false
                  },
                  "endValue": {
                    "type": "integer",
                    "required": false
                  },
                  "file": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "filename": {
                          "type": "string",
                          "required": true
                        },
                        "url": {
                          "type": "string",
                          "required": false
                        },
                        "type": {
                          "type": "string",
                          "required": false
                        },
                        "source": {
                          "type": "string",
                          "required": false
                        },
                        "name": {
                          "type": "string",
                          "required": false
                        },
                        "size": {
                          "type": "string",
                          "required": false
                        }
                      },
                      "required": ["filename"]
                    }
                  }
                },
                "required": ["id", "value", "title", "selected"]
              }
            },
            "form": [
              {
                "id": {
                  "type": "string",
                  "required": true
                },
                "title": {
                  "type": "string",
                  "required": true
                },
                "input": {
                  "type": "string",
                  "required": true
                }
              }
            ],
            "choices": [
              {
                "id": {
                  "type": "string",
                  "required": true
                },
                "title": {
                  "type": "string",
                  "required": true
                },
                "questionId": {
                  "type": "string",
                  "required": false
                },
                "selected": {
                  "type": "boolean",
                  "required": true
                },
                "file": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "filename": {
                        "type": "string",
                        "required": true
                      },
                      "url": {
                        "type": "string",
                        "required": false
                      },
                      "type": {
                        "type": "string",
                        "required": false
                      },
                      "source": {
                        "type": "string",
                        "required": false
                      },
                      "name": {
                        "type": "string",
                        "required": false
                      },
                      "size": {
                        "type": "string",
                        "required": false
                      }
                    },
                    "required": ["filename"]
                  }
                }
              }
            ],
            "files": [
              {
                "id": {
                  "type": "string",
                  "required": true
                },
                "url": {
                  "type": "string",
                  "required": false
                },
                "type": {
                  "type": "string",
                  "required": false
                },
                "source": {
                  "type": "string",
                  "required": false
                },
                "name": {
                  "type": "string",
                  "required": false
                },
                "size": {
                  "type": "string",
                  "required": false
                }
              }
            ],
            "Text": [
              {
                "id": {
                  "type": "string",
                  "required": false
                },
                "value": {
                  "type": "string",
                  "required": false
                }
              }
            ],
            "rating": {
              "value": {
                "type": "number",
                "required": false
              },
              "max": {
                "type": "number",
                "required": false
              }
            }
          }
        }
      },
      "Response": {
        "type": "object",
        "properties": {
          "taskId": {
            "type": "string"
          },
          "questionId": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "answers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "value": {
                  "type": "string"
                },
                "selected": {
                  "type": "boolean"
                },
                "file": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "filename": {
                        "type": "string"
                      },
                      "url": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "CreateBulkResponses": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/CreateResponse"
        }
      },
      "EditResponse": {
        "type": "object",
        "properties": {
          "answers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "value": {
                  "type": "string"
                },
                "selected": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }

}
